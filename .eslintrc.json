{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "overrides": [
      {
        "files": ["*.js"],
        "rules": {
          "react/no-unused-state": "off",
          "react/prop-types": "off"
        }
      }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "no-console": "off",
      "@typescript-eslint/no-var-requires": "off",
      "quotes": ["error", "double"],
      "@typescript-eslint/no-explicit-any": "off"
    }
}
