<div chat-id="{{chat.id}}" class="chat-item {{className}}">
  <Chat.Avatar className="chat-item__avatar" image="{{chat.avatar}}" onClick={{onAvatarUpdate}} />
  <div class="chat-item__last-message-detials">
    <div class="row1">
      <div class="chat-item__title">{{chat.title}}</div>
      <MessageTime className="chat-item__message-time" time="{{chat.lastMessage.time}}" />
    </div>
    <div class="row2">
      <div class="chat-item__last-message-content">{{chat.lastMessage.content}}</div>
      <UnreadCount unreadCount="{{chat.unreadCount}}" />
    </div>
  </div>
</div>
